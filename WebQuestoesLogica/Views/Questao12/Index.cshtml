@model WebQuestoesLogica.Models.Questao12Model

@{
    ViewBag.Title = "Questão 12";
}

<h2>Questão 12</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Crie uma lista de string onde será possível adicionar vários nomes. Criar um campo para consultar pelo nome. Apresentar a quantidade de nomes encontrados. Por exemplo: Joao, Pedro, Lucas, Carlos, Osni, Oscar, Costa - Se eu procurar por “os” apresentará o resultado 4</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button onclick="location.href='@Url.Action("Create", "Questao12")'" type="button" class="btn btn-primary"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span>Cadastrar</button>
        </div>
    </div>

    @if (Model != null && Model.Resultado != "")
    {
        <div class="form-group">
            <label class="control-label col-md-2">Nomes</label>
            <div class="col-md-10">
                <label class="text-left text-success">@Html.DisplayFor(model => model.Resultado)</label>
            </div>
        </div>
    }

    @if (Model != null && Model.Total > 0)
    {
        <div class="form-group">
            <label class="control-label col-md-2">Quantidade de nomes</label>
            <div class="col-md-10">
                <label class="text-left text-success">@Html.DisplayFor(model => model.Total)</label>
            </div>
        </div>
    }

    <div class="form-group">
        <label class="control-label col-md-2">Consulta</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Consulta, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Consulta, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Processar" class="btn btn-default" />
        </div>
    </div>

    @if (Model != null && Model.Posicao > 0)
    {
        <div class="form-group">
            <label class="control-label col-md-2">Posição</label>
            <div class="col-md-10">
                <label class="text-left text-success">@Html.DisplayFor(model => model.Posicao)</label>
            </div>
        </div>
    }
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}