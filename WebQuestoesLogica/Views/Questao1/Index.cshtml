@model WebQuestoesLogica.Models.Questao1Model

@{
    ViewBag.Title = "Questão 1";
}

<h2>Questão 1</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Entrar com um número e imprimi-lo caso seja maior que 20</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class="control-label col-md-2" for="nome">Número</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Numero, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Numero, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Resposta" class="btn btn-default" />
        </div>
    </div>

    @if (Model != null && Model.Numero > 0)
    {
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <label class="text-left text-success" for="nome">Resposta = @Html.DisplayFor(model => model.Numero )</label>
            </div>
        </div>
    }
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}