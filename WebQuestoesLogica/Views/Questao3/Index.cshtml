@model WebQuestoesLogica.Models.Questao3Model

@{
    ViewBag.Title = "Questão 3";
}

<h2>Questão 3</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Todo restaurante, embora por lei não possa obrigar o cliente a pagar, cobra 10% para o garçom. Fazer um algoritmo que leia o valor gasto com despesas realizadas em um restaurante e imprima o valor total com gorjeta</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class="control-label col-md-2" for="nome">Valor</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Valor, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Valor, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Resposta" class="btn btn-default" />
        </div>
    </div>

    @if (Model != null && Model.Acrescimo > 0)
    {
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <label class="text-left text-success" for="nome">Resposta = @Html.DisplayFor(model => model.Acrescimo )</label>
            </div>
        </div>
    }
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}