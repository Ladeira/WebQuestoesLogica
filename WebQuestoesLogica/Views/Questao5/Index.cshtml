@model WebQuestoesLogica.Models.Questao5Model

@{
    ViewBag.Title = "Questão 5";
}

<h2>Questão 5</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Entrar com a sigla do estado de uma pessoa imprimir uma das mensagens:<br />
        • Carioca<br />
        • Paulista<br />
        • Mineiro<br />
        • Outros estados
    </h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class="control-label col-md-2" for="nome">Número</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Uf, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Uf, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Resposta" class="btn btn-default" />
        </div>
    </div>

    @if (Model != null && Model.Gentilico != "")
    {
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <label class="text-left text-success">Resposta = @Html.DisplayFor(model => model.Gentilico)</label>
            </div>
        </div>
    }
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}