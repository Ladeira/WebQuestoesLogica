@model WebQuestoesLogica.Models.Questao6Model

@{
    ViewBag.Title = "Questão 6";
}

<h2>Questão 6</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Entrar com a idade de uma pessoa e informar:<br />
        • Se é maior de idade<br />
        • Se é menor de idade<br />
        • Se é maior de 65 anos
    </h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class="control-label col-md-2" for="nome">Número</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Idade, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Idade, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Resposta" class="btn btn-default" />
        </div>
    </div>

    @if (Model != null && Model.FaixaEtaria != "")
    {
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <label class="text-left text-success">Resposta = @Html.DisplayFor(model => model.FaixaEtaria)</label>
            </div>
        </div>
    }
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}